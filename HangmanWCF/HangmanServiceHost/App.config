<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>

  <system.serviceModel>
    <services>
      <service name="HangmanLibrary.GameState" behaviorConfiguration="MEXGET">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:12000"/>
          </baseAddresses>
        </host>
        <endpoint
              name="GameState"
              address="http://localhost:12000/HangmanLibrary/GameState"
              binding="wsDualHttpBinding"
              bindingConfiguration="MyBindingConfig"
              contract="HangmanLibrary.IGameState" />
      </service>
    </services>
  
    <behaviors>
      <serviceBehaviors>
        <behavior name="MEXGET">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  
    <bindings>
      <wsDualHttpBinding>
        <binding name="MyBindingConfig">
          <security mode="None"/>
        </binding>
      </wsDualHttpBinding>
    </bindings>
  </system.serviceModel>
  
</configuration>